{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "dom"
    ],
    "module": "ESNext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "sourceMap": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types",
      "./src/types.d.ts"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
